<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <customer>
            <captcha>
                <shown_to_logged_in_user>
                    <testimonials>1</testimonials>
                </shown_to_logged_in_user>
                <always_for>
                    <testimonials>1</testimonials>
                </always_for>
            </captcha>
        </customer>
        <captcha translate="label">
            <frontend>
                <areas>
                    <testimonials>
                        <label>Testimonials Form</label>
                    </testimonials>
                </areas>
            </frontend>
        </captcha>
        <test>
            <email>
                <send_email>send_email_email_template</send_email>
            </email>
        </test>
    </default>
</config>
